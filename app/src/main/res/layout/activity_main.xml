<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/loginStateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:text="Login: ND"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/setStateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nowMusicTextView"
        android:layout_alignEnd="@+id/timerTextView"
        android:layout_marginEnd="18dp"
        android:text="Set: 0"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/timerStateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/loginStateTextView"
        android:layout_alignStart="@+id/loginStateTextView"
        android:layout_below="@+id/loginStateTextView"
        android:layout_marginTop="13dp"
        android:text="State: " />

    <TextView
        android:id="@+id/nowMusicTextView"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/loginStateTextView"
        android:layout_marginTop="37dp"
        android:background="@color/colorAccent"
        android:text="DummySong - the dummy -"
        android:textAlignment="center"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/jacketImageView"
        android:layout_width="match_parent"
        android:layout_height="380px"
        android:layout_above="@+id/cancelButton"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nowMusicTextView"
        />
        <!--app:srcCompat="@drawable/fever"-->


    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="99:59"
        android:textColor="?android:attr/editTextColor"
        android:textSize="72sp" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/loginStateTextView"
        android:layout_marginBottom="73dp"
        android:layout_marginStart="28dp"
        android:text="Reset"
        android:visibility="invisible" />

    <ToggleButton
        android:id="@+id/playerToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:text="ToggleButton"
        android:textOff="Play"
        android:textOn="Pause"
        android:layout_below="@+id/jacketImageView"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="73dp" />

    <Button
        android:id="@+id/nextSongButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next song"
        android:layout_alignBaseline="@+id/musicPauseButton"
        android:layout_alignBottom="@+id/musicPauseButton"
        android:layout_alignStart="@+id/cancelButton" />

    <Button
        android:id="@+id/musicPauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/playerToggleButton"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:text="song pause" />
    />
</RelativeLayout>