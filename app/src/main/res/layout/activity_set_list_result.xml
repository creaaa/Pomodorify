<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playlist Result"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/selectAllButton"
        android:layout_alignBottom="@+id/selectAllButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/selectAllButton"
        android:text="Rate this setlist if you like!"
        android:textSize="17sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/selectAllButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/remainingBreakTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/ratingBar"
        android:text="next set: --:--"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/setListListView"
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="118dp"
        android:layout_above="@+id/addPlaylistButton"
        android:choiceMode="multipleChoice"
        />

    <Button
        android:id="@+id/addPlaylistButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add playlist"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <Button
        android:id="@+id/selectAllButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/remainingBreakTimeTextView"
        android:text="Select All" />

</RelativeLayout>